<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <TextureView
            android:id="@+id/textureView"
            android:padding="440dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_gravity="center"
    />

    <ToggleButton
            android:layout_marginTop="10dp"
            android:id="@+id/simpleToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textureView"
            android:textOff="Video"
            android:textOn="Photo"
    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginTop="-15dp"
                  android:layout_below="@id/simpleToggleButton"
    >

        <Button
                android:id="@+id/button"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Capture image"
                android:textAllCaps="false"
                android:layout_gravity="center"
        />

        <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Start video"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:visibility="gone"
        />

        <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Stop video"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:visibility="gone"
        />

        <ToggleButton
                android:id="@+id/vidToggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:checked="true"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:textOff="Start Video"
                android:textOn="Stop Video"
                android:visibility="gone"
        />

    </LinearLayout>


</RelativeLayout>